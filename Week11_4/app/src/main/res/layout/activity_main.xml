<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- EditText for search input -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name to search"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Search button -->
    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:onClick="onClick"
        android:layout_marginBottom="20dp" />

    <!-- TextViews for displaying data -->
    <TextView
        android:id="@+id/nameDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/surnameDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname: "
        android:textSize="18sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/salaryDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary: "
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <!-- ImageView for photo -->
    <ImageView
        android:id="@+id/photoDB"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="Contact Photo"
        android:background="#DDD"
        android:padding="4dp" />

</LinearLayout>